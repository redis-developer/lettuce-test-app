<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml" />
    <include resource="org/springframework/boot/logging/logback/file-appender.xml" />

    <property name="METRICS_LOG_PATTERN" value="${METRICS_LOG_PATTERN:-%d{yyyy-MM-dd HH:mm:ss.SSS} - %msg%n}"/>

    <property name="METRICS_LOG_FILE" value="${logging.file.metrics:-${LOG_PATH:-logs}/lettuce-test-app-metrics.log}"/>
    <appender name="METRICS_FILE" class="ch.qos.logback.core.FileAppender">
        <file>${METRICS_LOG_FILE}</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>${FILE_LOG_CHARSET}</charset>
        </encoder>
    </appender>

    <property name="METRICS_TOTAL_LOG_FILE" value="${logging.file.metrics:-${LOG_PATH:-logs}/lettuce-test-app-metrics-total.log}"/>
    <appender name="METRICS_TOTAL_FILE" class="ch.qos.logback.core.FileAppender">
        <file>${METRICS_TOTAL_LOG_FILE}</file>
        <encoder>
            <pattern>${METRICS_LOG_PATTERN}</pattern>
            <charset>${FILE_LOG_CHARSET}</charset>
        </encoder>
    </appender>

    <logger name="simple-metrics-reporter" level="DEBUG" additivity="false">
        <appender-ref ref="METRICS_TOTAL_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="io.lettuce.test.metrics.ExtendedLoggingMeterRegistry" level="DEBUG" additivity="false">
        <appender-ref ref="METRICS_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="io.lettuce.test.metrics.ExtendedLoggingMeterRegistry" level="DEBUG" additivity="false">
        <appender-ref ref="METRICS_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>


    <logger name="io.lettuce.core.protocol.ConnectionWatchdog" level="DEBUG"/>
    <logger name="io.lettuce.core.protocol.ReconnectionHandler" level="DEBUG"/>
    <logger name="io.lettuce.core.RedisHandshake" level="DEBUG"/>


    <logger name="io.lettuce.core" level="INFO" />

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>
</configuration>